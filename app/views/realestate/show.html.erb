<h2>Real Estate Company and its details</h2>
<% @companies = Realestate.all %>
<table id="companies" role="datatable">
  <thead>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Address</th>
    <th>Size</th>
    <th>Found</th>
    <th>Revenue</th>
    <th>Synopsis</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
  </thead>
  <tbody>
  <% @companies.each do |company| %>
  <tr>
    <td>
      <%= company.name %>
    </td>
    <td>
      <%= company.website %>
    </td>
    <td>
      <%= company.address %>
    </td>
    <td>
      <%= company.size %>
    </td>
    <td>
      <%= company.founded %>
    </td>
    <td>
      <%= company.revenue %>
    </td>
    <td>
      <%= company.synopsis %>
    </td>
    <td>
      <%= link_to "Edit", realestate_edit_path(company.id) %>
    </td>
    <td>
      <%= link_to "Delete",realestate_destroy_path(company.id) %>
    </td>
  </tr>
  <% end %>
    </tbody>
  </table>


<% if current_user.user_type == 'Admin'%>
  <%= link_to 'Create company', new_realestate_path %>
<%end %>

<%= link_to 'Back', user_menu_path, :class => 'button' %>