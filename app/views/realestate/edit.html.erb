<% provide(:title, "Edit Company") %>
<h1>Edit Company Information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :realestate do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      </br>
      <%= f.label :website %>
      <%= f.text_field :website, class: 'form-control' %>
      </br>
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      </br>
      <%= f.label :size %>
      <%= f.text_field :size, class: 'form-control' %>
      </br>
      <%= f.label :founded %>
      <%= f.text_field :founded, class: 'form-control' %>

      </br>
      <%= f.label :revenue %>
      <%= f.text_field :revenue, class: 'form-control' %>

      </br>
      <%= f.label :synopsis %>
      <%= f.text_field :synopsis, class: 'form-control' %>

      </br>
      <%= f.submit "Save changes", class: "btn btn-primary" %>

      <%= link_to 'Back', realestate_show_path%>
    <% end %>
  </div>
</div>