<h2>User Details</h2>
<% @users = User.all %>
<table id="users" role="datatable">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>User Type</th>
    <th>Phone</th>
    <th>Preferred Contact</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <% if user.user_type!= "Admin" %>
    <tr>
      <td>
        <%= user.name %>
      </td>

      <td>
        <%= user.email %>
      </td>

      <td>
        <%= user.user_type %>
      </td>

      <td>
        <%= user.phone %>
      </td>

      <td>
        <%= user.preferred_contact %>
      </td>
      <td>
        <%= link_to "Edit", user_edit_path(user.id) %>
      </td>
      <td>
        <%= link_to "Delete", users_destroy_path(user.id) %>
      </td>
    </tr>
  <%end %>
  <% end %>
  </tbody>
</table>


<%= link_to 'Back', user_menu_path, :class => 'button' %>