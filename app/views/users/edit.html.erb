<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :user do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      </br>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      </br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      </br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      </br>
      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form_control' %>
      </br>
      <%= f.label :preferred_contact %>
      <%= f.select :preferred_contact, %w[Text Email] %>
      </br>
      <% if current_user.user_type === 'Realtor' %>
        <%= f.label "Choose Company" %>
        <%= f.collection_select :company_name, Realestate.order(:name), :id, :name, include_blank: true %>
        <%= link_to "Create New Company", realestate_path %>
        </br>
      <% end %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>