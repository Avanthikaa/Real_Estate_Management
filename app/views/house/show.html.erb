        <%= house.style %>
      </td>

      <td>
        <%= house.list_price %>
      </td>

      <td>
        <%= house.floors %>
      </td>

      <td>
        <%= house.basement %>
      </td>

      <td>
        <%= house.currentowner %>
      </td>

      <td>
        <%= house.contact %>
      </td>
      <% if current_user.user_type != "Realestate Hunter" %>
