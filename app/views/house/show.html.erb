<h2>House Details</h2>

<% @house = House.all %>
<% if @house.any? %>
<table id="houses" role="datatable">
  <thead>
    <tr>
      <th>Location</th>
      <th>Square Footage</th>
      <th>Year</th>
      <th>Style</th>
      <th>List Price</th>
      <th>Floors</th>
      <th>Basement</th>
      <th>Current Owner</th>
      <th>Contact</th>
      <th>Potential Buyers</th>
      <th>Image</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>
